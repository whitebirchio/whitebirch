---
import BaseHead from '../components/Head/BaseHead.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer/Footer.astro';
import { title, seoDescription } from '../utils/constants';
---

<html lang="en">
  <head>
    <BaseHead title={title} description={seoDescription} />
  </head>

  <body class="bg-white text-black font-body leading-normal personality-casual">
    <Nav />

    <main class="py-12 lg:py-20">
      <article class="max-w-6xl mx-auto px-3">
        <header class="mx-auto max-w-3xl text-center content">
          <h1 class="mb-4">Uh oh!</h1>
          <p>Are you lost? Thereâ€™s not much to see here.</p>
          <img
            class="rounded-xl mx-auto"
            style="min-width: 80%;"
            loading="lazy"
            src="/images/404.png"
            alt="A person who is lost in a forest of white birch trees. "
          />
        </header>
      </article>
    </main>
    <Footer />
  </body>
</html>
